# dwz: debian/clang-dpcpp-20/usr/lib/llvm-dpcpp-20/bin/clang-nvlink-wrapper: Too many DIEs, not optimizing
override_dh_dwz:
	:

override_dh_clean:
	rm -rf ${UR_BUILD_XPTI_LIBS}
	dh_clean
